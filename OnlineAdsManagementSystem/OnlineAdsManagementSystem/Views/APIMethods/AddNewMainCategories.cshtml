@model OnlineAdsManagementSystem.Models.FilteredPropertiesOfMainCategory

@{
    ViewData["Title"] = "AddNewMainCategories";
    if (TempData["addNewMCDone"]!=null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!!</strong> @TempData["addNewMCDone"]

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    if (TempData["addNewMCError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Sorry!!</strong> @TempData["addNewMCError"] Try adding other Categories

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}



<div class="d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="card bg-dark mt-5" style="width: 30rem; height: auto;">
        <h1 class="col d-flex justify-content-center m-3 text-white">Add Main Category</h1>

        <div class=" col d-block justify-content-center border-5 border-dark ">

            <div class="col d-flex justify-content-center m-3 ">
                <div class="" style="width: 20rem; height:auto">


                    <div class="card-body text-white">

                        <form asp-action="AddNewMainCategories">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="mcname" class="control-label"></label>
                                <input asp-for="mcname" class="form-control" />
                                <span asp-validation-for="mcname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Add" class="btn btn-primary" />
                            </div>
                        </form>
                       

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div>
    <a style="display: inline-block; padding: 10px 20px; background-color: #ff3333; color: white; text-decoration: none;
              text-shadow: 2px 2px 2px black; font-weight: 800; border-radius: 8px; text-align: center;"
       asp-controller="Home" asp-action="AdminDashboard">
        Back to Dashboard
    </a>
</div>

