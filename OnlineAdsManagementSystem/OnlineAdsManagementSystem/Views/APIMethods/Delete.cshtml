@model OnlineAdsManagementSystem.Models.NewViewMyAds

@{
    ViewData["Title"] = "Delete";
    var userId = ViewContext.HttpContext.Session.GetString("UserSession");
}







<div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="card bg-dark " style="width: 30rem; height: auto;">
        <h1 class="col d-flex justify-content-center m-3 text-white">Delete Ad</h1>

        <div class=" col d-block justify-content-center border-5 border-dark">

            <div class="col d-flex justify-content-center m-3 ">
                <div class="card mb-4" style="width: 20rem; height:auto">


                    <div class="card-body">


                        
                            <p class="card-text ">
                                <h5 style="color:red;">Are you sure you want to delete this?</h5>
                                <span style="color:black; font-weight:600; ">Ad ID</span> : @Html.DisplayFor(model => model.adId)
                                <br />
                                <span style="color:black; font-weight:600; ">User ID</span>: @Html.DisplayFor(model => model.userId)
                                <br />
                                <span style="color:black; font-weight:600; ">Main Category</span>: @Html.DisplayFor(model => model.mCname)
                                <br />
                                <span style="color:black; font-weight:600; ">Sub Category</span>: @Html.DisplayFor(model => model.sCname)
                                <br />
                                <span style="color:black; font-weight:600; ">Ad Title</span>: @Html.DisplayFor(model => model.adTitle)
                                <br />
                                <span style="color:black; font-weight:600; ">Ad Description</span>: @Html.DisplayFor(model => model.adDescription)
                                <br />
                                <span style="color:black; font-weight:600; ">Contact Name</span>: @Html.DisplayFor(model => model.contactName)
                                <br />
                                <span style="color:black; font-weight:600; ">Contact Email</span>: @Html.DisplayFor(model => model.contactEmail)
                                <br />
                                <span style="color:black; font-weight:600; ">Phone Number</span>: @Html.DisplayFor(model => model.phoneNumber)
                                <br />
                                <span style="color:black; font-weight:600; ">Status </span>: @Html.DisplayFor(model => model.status)
                                <br />
                                @* <span style="color:black; font-weight:600; ">User Type</span>: @Html.DisplayFor(model => model.UserType)
                                <br /> *@
                                <br />
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="adId" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> 
                                
                            </form>
                            </p>

                        

                    </div>
                </div>
            </div>



        </div>
    </div>
</div>


<div>
    <a style="display: inline-block; padding: 10px 20px; background-color: #ff3333; color: white; text-decoration: none;
              text-shadow: 2px 2px 2px black; font-weight: 800; border-radius: 8px; text-align: center;"
       asp-controller="Home" asp-action="UserDashboard">
        Back to Dashboard
    </a>
</div>





