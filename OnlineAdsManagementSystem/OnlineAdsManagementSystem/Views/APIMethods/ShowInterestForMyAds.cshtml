@model IEnumerable<OnlineAdsManagementSystem.Models.FilteredPropertiesOfInterest>

@{
    ViewData["Title"] = "ShowInterestForMyAds";
}



@{
    
}


<div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="card bg-dark mt-5 " style="width: 30rem; height: auto;">
        <h1 class="col d-flex justify-content-center m-3 text-white"> Enquiry List</h1>

        <div class=" col d-block justify-content-center border-5 border-dark">
            @if (Model == null || !Model.Any())
            {
            <h5 style=" text-align:center; color:white">No One Has Shown Interest yet</h5>
            }
            @foreach (var item in Model)
            {
               
                <div class="col d-flex justify-content-center m-3 ">
                    <div class="card mb-4" style="width: 20rem; height:auto">


                        <div class="card-body">


                            <div class="col d-flex flex-column align-items-center">
                                <p class="card-text ">
                                    <span style="color:black; font-weight:600; ">Ad ID</span> : @Html.DisplayFor(modelItem => item.adId)
                                    <br />
                                    <span style="color:black; font-weight:600; ">User ID</span>: @Html.DisplayFor(modelItem => item.userId)
                                    <br />
                                    <span style="color:black; font-weight:600; ">Interest Message</span>: @Html.DisplayFor(modelItem => item.interestMessage)
                                    <br />
                                    <span style="color:black; font-weight:600; ">Timestamp</span>: @Html.DisplayFor(modelItem => item.timestamp)
                                    <br />


                                </p>

                            </div>


                        </div>


                    </div>
                </div>

            }        

        </div>
    </div>
</div>


<div>
    <a style="display: inline-block; padding: 10px 20px; background-color: #ff3333; color: white; text-decoration: none;
              text-shadow: 2px 2px 2px black; font-weight: 800; border-radius: 8px; text-align: center;"
       asp-controller="Home" asp-action="UserDashboard">
        Back to Dashboard
    </a>
</div>




