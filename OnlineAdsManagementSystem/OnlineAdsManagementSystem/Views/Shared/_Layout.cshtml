<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineAdsManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineAdsManagementSystem.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-K+ctZfS8p4KbzmZnF1hMIs/jfD6R6pUGYT5ZhFvRW4="
            crossorigin="anonymous"></script>
</head>
<body>
    @* <style>
        body {
            background: rgb(100,94,198);
            background: linear-gradient(90deg, rgba(100,94,198,1) 0%, rgba(103,96,195,1) 8%, rgba(236,198,56,1) 50%, rgba(0,212,255,1) 100%);
        }
    </style> *@
    <style>
        body {
            background-image: url('@Url.Content("~/images/pexels-christian-heitz-285904-842711.jpg")');
            background-size: cover; /* Makes sure the image covers the entire background */
            background-position: center; /* Centers the image */
            background-repeat: no-repeat; /* Prevents the image from repeating */
            background-attachment: fixed; /* Keeps the background image fixed when scrolling */
            /* background-size: contain; */
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary  border-bottom box-shadow mb-1">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <b>Online Ads Management System</b> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Left side links -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Right side (Login/Logout) -->
                    <ul class="navbar-nav ms-auto">
                        @{
                            if (ViewContext.HttpContext.Session.GetString("UserSession") == null || ViewContext.HttpContext.Session.GetString("AdminSession") == null)
                            {
                                <li id="auth-link" class="nav-item">
                                    <a class="nav-link "  asp-area="" asp-controller="Home" asp-action="Login" > Login</a>
                                </li>
                            }
                        }

                        <script>
                            document.addEventListener("DOMContentLoaded", function () {
                                var userSession = '@ViewContext.HttpContext.Session.GetString("UserSession")';
                                var adminSession = '@ViewContext.HttpContext.Session.GetString("AdminSession")';

                                var authLink = document.getElementById("auth-link");

                                if (!userSession && !adminSession) {
                                    authLink.innerHTML = '<a class="nav-link text-dark" href="/Home/Login">Login</a>';
                                } else {
                                    authLink.innerHTML = '<a class="nav-link text-dark" href="/Home/Logout">Logout</a>';
                                }
                            });
                        </script>
                    </ul>



                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
